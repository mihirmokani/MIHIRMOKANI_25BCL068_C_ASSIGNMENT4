#include <stdio.h>

struct student {
    char name[50];
    int roll;
    float marks;
};

int main() {
    struct student s, *ptr;
    ptr = &s;

    printf("Enter student name: ");
    gets(ptr->name);
    printf("Enter roll number: ");
    scanf("%d", &ptr->roll);
    printf("Enter marks: ");
    scanf("%f", &ptr->marks);

    printf("\nStudent Details:\n");
    printf("Name: %s\n", ptr->name);
    printf("Roll No: %d\n", ptr->roll);
    printf("Marks: %.2f\n", ptr->marks);

    return 0;
}
