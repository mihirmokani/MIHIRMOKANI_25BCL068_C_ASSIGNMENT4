#include <stdio.h>
#include <string.h>

int main() {
    char str[100], rev[100];
    char *p1, *p2;
    int len, i;

    printf("Enter a string: ");
    gets(str);

    len = strlen(str);
    p1 = str + len - 1;
    p2 = rev;

    while (p1 >= str) {
        *p2 = *p1;
        p1--;
        p2++;
    }
    *p2 = '\0';

    printf("Reversed string: %s\n", rev);
    return 0;
}
