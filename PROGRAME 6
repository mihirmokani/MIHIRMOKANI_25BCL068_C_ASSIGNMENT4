#include <stdio.h>

int main() {
    int arr[100], n, i, *p, largest;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    p = arr;
    largest = *p;

    for (i = 1; i < n; i++) {
        if (*(p + i) > largest)
            largest = *(p + i);
    }

    printf("Largest element = %d\n", largest);
    return 0;
}
