#include <stdio.h>

int main() {
    char str[100], *p;
    int vowels = 0, consonants = 0;

    printf("Enter a string: ");
    gets(str);

    p = str;

    while (*p != '\0') {
        if ((*p >= 'A' && *p <= 'Z') || (*p >= 'a' && *p <= 'z')) {
            if (*p == 'A' || *p == 'E' || *p == 'I' || *p == 'O' || *p == 'U' ||
                *p == 'a' || *p == 'e' || *p == 'i' || *p == 'o' || *p == 'u')
                vowels++;
            else
                consonants++;
        }
        p++;
    }

    printf("Vowels = %d\n", vowels);
    printf("Consonants = %d\n", consonants);
    return 0;
}
